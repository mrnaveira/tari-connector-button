{
    "compilerOptions": {
      "module": "ES2020",
      "target": "ESNext",
      "moduleResolution": "Bundler",
      "declaration": true,
      "outDir": "./dist",
      "strictPropertyInitialization": false,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "strict": true,
      "jsx": "react-jsxdev",
      "isolatedModules": true,
      "paths": {
        "react": ["./node_modules/react"],
        "react-dom": ["./node_modules/react-dom"]
      }
    },
    "include": ["src/**/*", "custom.d.ts"],
  }